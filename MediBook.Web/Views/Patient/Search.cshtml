@{
    ViewData["Title"] = "Patient Search";
}

@model PatientSearchCriteria
<!--Breadcrumb navigation-->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a class="text-white" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a class="text-white" asp-controller="Patient" asp-action="Index">Patient Administration</a></li>
        <li class="breadcrumb-item active text-white" aria-current="page">@ViewData["Title"]</li>
    </ol>
</nav>

<div class="card table-blue-border w-50" style=" margin:auto;">
    <h3 class="card-header thead-blue">@ViewData["Title"]</h3>
    <div class="card-body w-100" style="margin: 0 auto">
        <div class="col-12">
            <form asp-action="Search" class="md-form">
                <div class="md-form">
                    <label for="SearchTerm" class="col-form-label">Search</label>
                    <input asp-for="SearchTerm" type="text" class="form-control" id="SearchTerm" />
                </div>
                <div class="form-check d-flex justify-content-center mb-4">
                    <input asp-for="IncludeLeftDeceasedAndUnknown"class="form-check-input" type="checkbox" id="IncludeLeftDeceasedAndUnknown"unchecked/>
                    <label class="form-check-label" for="IncludeLeftDeceasedAndUnknown">
                        Include patients who have left or are deceased
                    </label>
                </div>
                <div class="form-group mt-4">
                    <input type="submit" value="search" class="btn btn-green-add" />
                </div>
            </form>
        </div>
    </div>
</div>