@{
    ViewData["Title"] = "Patient Administration";
}

@model PatientSearchCriteria
<!--Breadcrumb navigation-->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a class="text-white" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active text-white" aria-current="page">@ViewData["Title"]</li>
    </ol>
</nav>

<div class="row mb-4">
    <div class="col-4">
        <a class="btn table-blue-border" asp-controller="Patient" asp-action="Register">
            <i class="fas fa-plus-circle fa-lg"></i> Register a Patient
        </a>
    </div>
    <div class="col-4">
        <a class="btn table-blue-border" asp-controller="Patient" asp-action="Search">
            <i class="fas fa-search fa-lg"></i> Find a Patient
        </a>
    </div>
</div>
